<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/list_item_height"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/abc_list_item_padding_horizontal_material"
      android:paddingRight="@dimen/abc_list_item_padding_horizontal_material">

    <TextView
        android:id="@+id/stock_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end">

      <TextView
          android:id="@+id/bid_price"
          style="@style/BidPriceTextStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingEnd="@dimen/price_text_padding"
          android:paddingLeft="@dimen/price_text_padding"
          android:paddingRight="@dimen/price_text_padding"
          android:paddingStart="@dimen/price_text_padding" />

      <TextView
          android:id="@+id/change"
          android:textColor="@android:color/white"
          android:textStyle="bold"
          android:textAppearance="@style/TextAppearance.AppCompat.Body1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="@dimen/change_text_padding"
          android:paddingLeft="@dimen/change_text_padding"
          android:paddingRight="@dimen/change_text_padding"
          android:paddingTop="@dimen/change_text_padding" />
    </LinearLayout>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:alpha="0.5"
      android:background="@android:color/darker_gray" />

</LinearLayout>